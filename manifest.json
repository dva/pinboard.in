{
    "manifest_version": 2,

    "name": "Simple Pinboard.in Client",
    "description": "Opens a little form window when you want to bookmark a page.",
    "version": "0.1.0",

    "icons": {
        "16": "icons/pinboard-16-icon.png",
        "32": "icons/pinboard-32-icon.png",
        "48": "icons/pinboard-48-icon.png",
        "128": "icons/pinboard-128-icon.png"
    },

    "permissions": [
        "https://pinboard.in/",
        "tabs"
    ],

    "browser_action": {
        "default_title": "Add a bookmark",
        "default_icon": {
            "19": "icons/icon19.png",
            "38": "icons/icon38.png"
        },
        "default_popup": "popup.html"
    }
}
